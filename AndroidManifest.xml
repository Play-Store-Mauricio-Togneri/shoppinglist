<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mauriciotogneri.shoppingcart"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/app_theme"
        android:name=".app.ShoppingCart" >
        
        <activity
            android:name=".activities.CartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
            android:name=".activities.AddProductActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
        
        <activity
            android:name=".activities.ManageCategoriesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
        
        <activity
            android:name=".activities.UpdateProductActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
        
        <meta-data android:name="AA_DB_NAME" android:value="shoppingcart.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data android:name="AA_MODELS"
                   android:value="com.mauriciotogneri.shoppingcart.model.Category, com.mauriciotogneri.shoppingcart.model.Product, com.mauriciotogneri.shoppingcart.model.CartItem" />
        
    </application>

</manifest>