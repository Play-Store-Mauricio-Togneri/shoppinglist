<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.mauriciotogneri.shoppingcart"
    style="@style/Screen" >
    
    <LinearLayout style="@style/Toolbar" >

        <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
            style="@style/ToolbarTitle"
            android:text="@string/add_product_toolbar_title" />

        <View style="@style/HorizontalSeparator" />

        <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
            style="@style/ToolbarButton"
            android:id="@+id/create_product"
            android:text="@string/icon_add" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
        
        <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_category"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_font_size"
            android:padding="10dp"
            android:background="@layout/border_label"
            custom:font="opensans" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/border_input" />
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
        android:id="@+id/empty_label"
        style="@style/LabelEmptyList" />

</LinearLayout>