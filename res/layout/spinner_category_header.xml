<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mauriciotogneri.shoppingcart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <include layout="@layout/spinner_category_title"/>
    
    <View style="@style/HorizontalSeparator" />

    <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/app_icon"
        android:text="@string/icon_dropdown"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/default_font_size"
        custom:font="glyphicons" />

</LinearLayout>