<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.mauriciotogneri.shoppingcart"
    style="@style/Screen" >

    <LinearLayout style="@style/Toolbar" >

        <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
            style="@style/ToolbarTitle"
            android:text="@string/main_toolbar_title" />

        <View style="@style/ToolbarSeparator" />

        <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
            style="@style/ToolbarButton"
            android:text="@string/main_toolbar_add_product"
            custom:font="glyphicons" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mauriciotogneri.shoppingcart.widgets.CustomTextView
        android:id="@+id/empty_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/label_list_empty"
        android:textSize="@dimen/default_font_size"
        android:textColor="@color/default_text_color"
        android:visibility="gone"
        custom:font="opensans" />

</LinearLayout>