<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.mauriciotogneri.shoppingcart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00A0E6"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.mauriciotogneri.shoppingcart.widgets.ToolbarTitle
            style="@style/ToolbarTitle"
            android:text="Add product" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.mauriciotogneri.shoppingcart.widgets.ToolbarButton
            style="@style/ToolbarButton"
            android:text="\uE086"
            custom:font="glyphicons" />

        <com.mauriciotogneri.shoppingcart.widgets.ToolbarButton
            style="@style/ToolbarButton"
            android:text="\uF001"
            custom:font="fontawesome" />

        <com.mauriciotogneri.shoppingcart.widgets.ToolbarButton
            style="@style/ToolbarButton"
            android:text="\uE962"
            custom:font="icomoon" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/list_empty"
        android:textSize="@dimen/default_font_size"
        android:visibility="gone" />

</LinearLayout>