<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="app.theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary.dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="base">
    </style>

    <style name="label.empty" parent="base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/label.empty.list</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:visibility">gone</item>
    </style>

