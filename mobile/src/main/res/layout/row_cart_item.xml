<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mauriciotogneri.common.widgets.CustomTextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background_color"
        android:clickable="false"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold"
        app:custom_font="opensans"
        tools:text="@string/dummy_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.mauriciotogneri.common.widgets.CustomImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail_size_normal"
            android:layout_height="@dimen/thumbnail_size_normal"
            android:src="@drawable/product_beer"/>

        <com.mauriciotogneri.common.widgets.CustomTextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_font_size"
            app:custom_font="opensans"
            tools:text="@string/dummy_text"/>

        <CheckBox
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"/>

    </LinearLayout>

</LinearLayout>