<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="10dp">

    <com.mauriciotogneri.common.widgets.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/label_product_name"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/default_font_size"
        custom:font="opensans"/>

    <com.mauriciotogneri.common.widgets.CustomEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bolder_input"
        android:inputType="textNoSuggestions|textVisiblePassword|textCapSentences"
        android:maxLength="40"
        android:padding="10dp"
        android:textColor="#007AB0"
        custom:font="opensans"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_1"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_2"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_3"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_4"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_5"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_6"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_7"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

            <View style="@style/ColorSeparator"/>

            <com.mauriciotogneri.common.widgets.CustomTextView
                android:id="@+id/color_8"
                style="@style/ColorButton"
                android:background="@android:color/black"/>

        </TableRow>

    </TableLayout>

</LinearLayout>